<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/item_mobile_friend_invite_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/item_mobile_friend_invite_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="XX"
            android:textSize="15sp" />

        <Button
            android:id="@+id/item_mobile_friend_invite_yaoqing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_white_selector"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:textSize="12sp"
            android:text="邀请"
            android:textColor="@color/theme_color" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_mobile_friend_invited_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/item_mobile_friend_invited_avator"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/item_mobile_friend_invited_avator"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_mobile_friend_invited_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/westore_gray_textcolor"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/item_mobile_friend_invited_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_textcolor_gray2"
                android:layout_marginTop="8dp"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/item_mobile_friend_invited_guanzhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_white_selector"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
             android:textSize="12sp"
            android:text="关注"
            android:textColor="@color/theme_color" />
    </RelativeLayout>

</LinearLayout>