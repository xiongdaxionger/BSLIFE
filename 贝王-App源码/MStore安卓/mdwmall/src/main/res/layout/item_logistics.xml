<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="60dip"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:id="@+id/icon_top_line"
            android:layout_width="0.5dp"
            android:layout_height="10dip"
            android:background="@color/westore_divider_bgcolor" />

        <ImageView
            android:id="@+id/iv_route_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dip" />

        <View
            android:id="@+id/icon_bottom_line"
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/westore_divider_bgcolor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical"
        android:paddingTop="@dimen/PaddingXLarge" >

        <TextView
            android:id="@+id/tv_route_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/westore_gray_textcolor"
            android:textSize="@dimen/TextSizeMedium" />
        <TextView
            android:id="@+id/tv_route_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/PaddingSmall"
            android:textColor="@color/westore_gray_textcolor"
            android:textSize="@dimen/TextSizeMedium" />

        <TextView
            android:id="@+id/tv_route_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/westore_gray_textcolor"
            android:textSize="@dimen/TextSizeMedium" />

        <LinearLayout
            android:id="@+id/ll_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/PaddingXLarge"
            android:orientation="vertical" >
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/westore_divider_bgcolor" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>