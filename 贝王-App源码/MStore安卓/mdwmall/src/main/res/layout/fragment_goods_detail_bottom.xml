<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/goods_list_bgimage"
    android:orientation="vertical" >

    <com.qianseit.westore.ui.HorizontalListView
        android:id="@+id/goods_detail_bottom_bar"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:background="@color/white"
        android:cacheColorHint="@color/white"
        android:divider="@null"
        android:dividerHeight="0.5dip"
        android:drawSelectorOnTop="false"
        android:fadingEdgeLength="0sp"
        android:groupIndicator="@null"
        android:listSelector="@color/white"
        android:scrollbars="none" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/westore_divider_bgcolor" />

    <FrameLayout
        android:id="@+id/goods_detail_bottom_comtent"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >
    </FrameLayout>

</LinearLayout>
