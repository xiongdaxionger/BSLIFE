<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
<!--会员订单列表-->
    <!--时间-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1901-01-10"
        android:textColor="@color/westore_gray_dark"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:id="@+id/time_textView"/>
    <!--订单状态-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="代付款"
        android:textColor="@color/westore_gray_dark"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/time_textView"
        android:textSize="14sp"
        android:layout_alignParentRight="true"
        android:gravity="end"
        android:id="@+id/status_textView"/>
    <!--商品图片-->
    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@id/time_textView"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/good_imageView"/>
    <!--商品名称-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="牛奶糖"
        android:layout_toRightOf="@id/good_imageView"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@id/good_imageView"
        android:textSize="16sp"
        android:maxLines="2"
        android:layout_marginRight="15dp"
        android:id="@+id/name_textView"/>
    <!--金额-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="实付款：100元"
        android:layout_alignBottom="@id/good_imageView"
        android:textColor="@color/black"
        android:layout_alignLeft="@id/name_textView"
        android:textSize="14sp"
        android:lines="1"
        android:id="@+id/amount_textView"/>
</RelativeLayout>
