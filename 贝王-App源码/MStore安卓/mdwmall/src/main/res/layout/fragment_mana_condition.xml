<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/condition_sale_linear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/PaddingLarge" >

            <CheckedTextView
                android:id="@+id/condition1_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:checked="true"
                android:drawablePadding="@dimen/PaddingMedium"
                android:gravity="center"
                android:text="销售中"
                android:textColor="@color/check_red_gray"
                android:textSize="@dimen/TextSizeBigSmall" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/condition_sort_linear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/PaddingLarge" >

            <CheckedTextView
                android:id="@+id/condition2_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="@dimen/PaddingMedium"
                android:gravity="center"
                android:text="销量排序"
                android:textColor="@color/check_red_gray"
                android:textSize="@dimen/TextSizeBigSmall" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/condition_filter_linear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/PaddingLarge" >

            <CheckedTextView
                android:id="@+id/condition3_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="@dimen/PaddingMedium"
                android:drawableRight="@drawable/all_img_select"
                android:gravity="center"
                android:text="筛选"
                android:textColor="@color/check_red_gray"
                android:textSize="@dimen/TextSizeBigSmall" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>