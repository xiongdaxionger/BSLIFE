<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <View
        android:id="@+id/item_menu_blan_view"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/text_goods_f7_color"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/item_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_menu_blan_view" >

        <View
            android:id="@+id/item_menu_divide_top"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/text_goods_e_color"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/item_menu_icon"
            android:layout_width="42dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/PaddingXLarge"
            android:src="@drawable/menu_icon_1"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/item_menu_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/MarginMedium"
            android:paddingRight="@dimen/PaddingXLarge"
            android:src="@drawable/base_arrow_right_pink_n"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/item_menu_sub_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/item_menu_right"
            android:paddingLeft="@dimen/PaddingXLarge"
            android:paddingRight="@dimen/PaddingMedium"
            android:src="@drawable/menu_icon_1"
            android:visibility="visible" />

        <TextView
            android:id="@+id/item_menu_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_menu_divide_top"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/PaddingLarge"
            android:layout_marginRight="@dimen/PaddingLarge"
            android:layout_toLeftOf="@+id/item_menu_sub_icon"
            android:layout_toRightOf="@+id/item_menu_title"
            android:gravity="right"
            android:singleLine="true"
            android:text="286"
            android:textColor="@color/westore_dark_textcolor"
            android:textSize="@dimen/TextSizeMedium"
            android:visibility="visible" />

        <TextView
            android:id="@+id/item_menu_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/PaddingXLarge"
            android:layout_marginTop="@dimen/PaddingXLarge"
            android:layout_toRightOf="@+id/item_menu_icon"
            android:paddingLeft="@dimen/MarginLarge"
            android:text="关于我们"
            android:textColor="@color/text_goods_3_color"
            android:textSize="@dimen/TextSizeMedium" />

        <View
            android:id="@+id/item_menu_divide"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_below="@+id/item_menu_title"
            android:background="@color/westore_divider_bgcolor" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/item_menu_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_menu"
        android:orientation="vertical"
        android:visibility="visible" >
    </LinearLayout>

    <View
        android:id="@+id/item_menu_detail_divide"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_below="@+id/item_menu_detail"
        android:background="@color/text_goods_e_color" />

</RelativeLayout>