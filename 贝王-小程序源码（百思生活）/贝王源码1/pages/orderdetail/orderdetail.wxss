
/*@import "../orderlist/orderlist.wxss";*/
@import "../../views/network/bad_network.wxss";

.order_padding{
    padding-left: 8px;
    padding-right: 8px;
}
.order_margin_top{
    margin-top: 10px;
}
.order_margin_bottom{
    margin-bottom: 10px;
}
/**底部线条**/
.bottom_line{
    border-bottom: 1px solid #F5F5F5;
    box-sizing: border-box;
}
/**订单详情容器**/
.order_detail_container{
    background-color: #F7F7F7;
    font-size: 15px;
    color: #000000;
    height: calc(100vh - 40px);
}
/**订单详情订单ID**/
.order_detail_id{
    display: flex;
    background-color: #FFFFFF;
    height: 44px;
    line-height: 44px;
    align-items: center;
}
/**订单详情上边界**/
.order_detail_id.top_border{
    border-top: 1px solid #F5F5F5;
}
/**订单详情信息视图**/
.order_detail_info_content{
    background-color: #FFFFFF;
    height: 44px;
    line-height: 44px;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
/**订单详情信息标题**/
.info_title{
    text-align: left;
    width: 80px;
}
/**订单详情信息文本**/
.info_content{
    text-align: right;
    line-height: 21px;
    overflow: hidden;
    max-height: 21px;
}
/**订单详情金额时间视图**/
.order_detail_price_time{
    background-color: #FFFFFF;
    display: flex;
    justify-content: flex-end;
    flex-wrap: wrap;
    padding-bottom: 100rpx;
}
/**订单详情支付金额标题**/
.order_total_price_title{
    margin-top: 5px;
    width: 100px;
    text-align: right;
    height: 20px;
    line-height: 20px;
}
/**订单详情支付总金额**/
.order_total_price{
    margin-top: 5px;
    text-align: left;
    color: #f73030;
    height: 20px;
    line-height: 20px;
}
/**订单详情支付时间**/
.order_time{
    margin-top: 5px;
    width: 100%;
    text-align: right;
    color: #C8C8C8;
    height: 20px;
    line-height: 20px;
}
/**订单地址视图**/
.order_address{
    position: relative;
    color: #000000;
    font-size: 15px;
    overflow: hidden;
    min-height: 80px;
    max-height: 80px;
}
/**背景图**/
.order_address_background{
    width: 100%;
    min-height: 75px;
    max-height: 75px;
}
/**用户图标**/
.order_address_name_image{
    width: 20px;
    height: 20px;
    position: absolute;
    top: 5px;
    left: 5px;
}
/**用户名称**/
.order_address_name{
    position: absolute;
    top: 5px;
    left: 30px;
    height: 20px;
    line-height: 20px;
    max-width: 40%;
    overflow: hidden;
}
/**手机图片**/
.order_address_phone_image{
    position: absolute;
    top: 5px;
    right: 105px;
    height: 20px;
    width: 20px;
}
/**地址箭头**/
.address_arrow{
    width: 12px;
    max-height: 12px;
    position: absolute;
    right: 5px;
    top: 24px;
}
/**手机文本**/
.order_address_phone{
    position: absolute;
    top: 5px;
    right: 8px;
    height: 20px;
    line-height: 20px;
    overflow: hidden;
    width: 100px;
    text-align: left; 
}
/**地址图标**/
.order_address_area_image{
    position: absolute;
    left: 5px;
    top:30px;
    height: 20px;
    width: 20px;
}
/**详细地址**/
.order_address_area{
    line-height: 20px;
    position: absolute;
    top: 30px;
    left: 30px;
    right: 5px;
}
/**价格信息视图**/
.order_price_info_content{
    color: #f73030;
    background-color: #FFFFFF;
    display: flex;
    justify-content: space-between;
    align-items: center;
    line-height: 25px;
}
/**价格标题**/
.order_price_title{
    margin-top: 5px;
    margin-bottom: 5px;
    text-align: left;
    color: #000000;
}
/**价格**/
.order_price{
    margin-top: 5px;
    margin-bottom: 5px;
    text-align: right;
}
/**空白**/
.bland{
    background-color: #F5F5F5;
    min-height: 10px;
    width: 100%
}
/**补款时间红色字体显示**/
.red_prepare_time{
    color: #f73030
}
/**底栏**/
.bottom_view{
    background-color: white;
    padding: 0px 8px;
    border-top: 1px solid #F5F5F5;
    position: fixed;
    bottom: 0px;
    right: 0px;
    width: 100%;
}
/**显示订单优惠视图**/
.order_promotion_view{
    background-color: white;
    line-height: 22px;
    margin-top: 10px;
    padding: 4px 8px
}
/**商品视图**/
.order_list_good{
    position: relative;
    font-size: 15px;
    height: 100px;
    line-height: 100px;
    background-color: #FFFFFF;
}
/**商品图片**/
.order_good_image{
    position: absolute;
    height: 68px;
    width: 68px;
    top: 16px;
    left: 8px;
}
/**商品名称**/
.order_good_name{
    position: absolute;
    top: 8px;
    left: 78px;
    right: 25px;
    line-height: 20px;
    max-height: 40px;
    overflow: hidden;
    text-overflow: ellipsis;
}
/**缩进**/
.order_good_name.have_tag{
    text-indent: 33px;
    display: inline-block;
}
/**预售/赠品/配件标志**/
.order_type_tag{
    position: absolute;
    top: 9px;
    left: 78px;
    width: 30px;
    color: white;
    background-color: #f73030;
    height: 18px;
    line-height: 18px;
    border-radius: 3.0px;
    font-size: 14px;
    padding-left: 1px;
    padding-right: 1px;
    text-align: center;
}
/**数量**/
.order_good_quantity{
    position: absolute;
    line-height: 10px;
    width: 35px;
    top: 10px;
    right: 2px;
    text-align: right;
    font-size: 13px;
}
/**评论按钮**/
.order_comment_button{
    position: absolute;
    top: 50px;
    right: 0px;
    color: #f73030;
    background-color: #FEEEEE;
    font-size: 14px;
    border: 1px solid #f73030;
}
/**价格**/
.order_good_price{
    position: absolute;
    line-height: 20px;
    top: 50px;
    left: 78px;
    right: 82px;
    text-align: left;
    color: #f73030;
}
/**商品的规格属性**/
.order_specInfo{
    text-align: left;
    position: absolute;
    line-height: 20px;
    font-size: 12px;
    left: 78px;
    top: 71px;
    right: 8px;
    overflow: hidden;
}
/**订单按钮共用样式**/
.order_button{
    height: 26px;
    line-height: 26px;
    border-radius: 5px;
    text-align: center;
    min-width: 74px;
}
/**右侧间距**/
.order_button.right_margin{
    margin-right: 10px;
}
/**操作视图布局**/
.action_view_flex{
    display: flex;
    align-items: center;
    justify-content: flex-end;
    flex-wrap: nowrap;
    height: 40px;
    line-height: 40px;
    font-size: 15px;
}
/**主按钮样式**/
.main_action_button{
    color: #f73030;
	border: 1px solid #f73030;
    background-color: #FEEEEE
}
/**取消支付/删除订单按钮样式**/
.sub_action_button{
    color: #CCCCCC;
    border: 1px solid #CCCCCC;
}
/**会员信息显示视图**/
.member_info_view{
    width: 100vw;
    height: 53px;
    position: relative;
}
/**会员信息**/
.member_info{
    position: absolute;
    top: 15px;
    left: 8px;
    right: 25px;
}
/**背景图**/
.background_image{
    max-height: 53px;
    min-height: 53px;
    width: 100%
}
/*条形码  */
.page {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.container {
    padding-bottom: 10rpx;
}

.panel {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: stretch;
    box-sizing: border-box;
    width:100%;
    border-radius: 10rpx;
    background-color: #fff;
}

.barcode {
    display: flex;
    height: 320rpx;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.barnum {
    width: 670rpx;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 38rpx;
    font-weight: bold;
    text-align: center;
    letter-spacing: 10rpx;
    white-space: nowrap;
}

.barcode > canvas {
    width: 680rpx;
    height: 200rpx;
}

.qrcode {
    height: 420rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;
}

.qrcode > canvas {
    width: 420rpx;
    height: 420rpx;
}