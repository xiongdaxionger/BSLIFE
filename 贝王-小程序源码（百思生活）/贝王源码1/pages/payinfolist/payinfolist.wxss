/**取消/确定按钮**/
.action_button{
    height: 45px;
    width: 50%;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 17px;
}
/**密码显示**/
.pay_password_show_container .show{
    width: 39px;
    min-height: 40px;
    max-height: 40px;
    text-align: center;
    font-size: 25px;
    background-color: white
}
/**边界**/
.show.right_line{
    border-right: 1px solid #F7F7F7
}
/**底部视图样式**/
.pay_bottom_view{
    width: 100%;
    position: fixed;
    bottom: 10px;
    left: 0px;
}

