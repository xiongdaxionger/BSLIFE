/*搜索头部*/
.groupBooking{font-size: 15px}
.banner{
    width:100%;
    height:158px;
    background: #f73030;
    position: relative;
}
.single_line_info{
    margin: 3px 6px;
    width: 100%
}
.timeout{
  width: 70%;
  padding: 2px 10px;
  position: absolute;
  bottom: 20px;
  border-radius: 5px;
  left: 50%;
  transform: translateX(-50%);
  top:25%;
}
.timeout>text{color: #fff;display:block;text-align: center;padding: 0 0 5px 0;font-size: 18px}
.timeout>view{display: flex;justify-content:space-around}
.timeout>view text{font-size:15px;background: #4d4d4d;height: 40px;padding: 0 3px;text-align: center;line-height: 40px;border-radius: 2px;margin-right: 2px;color:#fff;}
.timeout>view view{font-size:14px;color: #fff}
.content_title{
    background:#f7f7f7;
    text-align:center;
    padding:10px;
    position:relative;
  }
.content_title>text{font-size: 14px;}
.content_title>image{
  width:115px;
  height:40px; 
}
.pin{font-size: 18px;position: relative;top: -20px;margin: 0 10px}
.content_title_drc{
  display:block;
  text-align:center;
  position:absolute;
  left:50%;
  transform:translatex(-50%);
  top:35px;
  z-index:2;
  color:#bebdbd;
}
.content_mian{
  padding: 5px 20px; 
  background: #f7f7f7;
  min-height:54vh;
}
.pro_banner{
  width: 100%;
  position: relative;
  height: 150px;
  background: #bebdbd;
  font-size:12px;
  color:#fff;

}
.pro_banner>view{
background:#ff0090;
width:50px;
text-align:center;
height:40px;
line-height:20px;
position:absolute;
left:10px;
}
.pro_banner>view::before{
content:"";
display:block;
width:0;
height:0;
border-left:25px solid transparent;
border-top:14px solid #ff0090;
position:absolute;
top:40px;
left:25px;
}
.pro_banner>view::after{
content:"";
display:block;
width:0;
height:0;
border-right:25px solid transparent;
border-top:14px solid #ff0090;
position:absolute;
top:40px;
left:0;
}
.pro_drc{
  padding:10px;
  background: #fff;
  position: relative;
}
.pro_txt text:nth-child(1){
  padding:2px 4px;
  color: #f73030;
  border: 1px solid  #f73030;
  font-size: 14px;
  margin-right: 8px;
}
.pro_txt text:nth-child(2){
  padding:2px 4px;
  color: #fff;
  font-size: 14px;
  background: #666666;
  margin-right: 8px;  
}
.pro_txt text:nth-child(3){
  font-weight:600;
  color:#333;
  line-height:25px;
}
.price{
  display: block;
  overflow: hidden;
  margin-top: 5px;
}
.price_l{
  float: left;
  font-weight: 600;
}
.price_l text{
  font-weight: 100;
  text-decoration: line-through;
  color: #ccc
}
.Open_group{
  float: right;
  padding:2px 5px;
  color: #fff;
  background: #f73030;
}
.bland{width: 100%;height: 18px;background: #f7f7f7}
/*-----流程-------*/
.title_line_info{
    width: 100%;
    border-bottom: 1px #F7F7F7 solid;
    font-size: 15px;
    min-height: 44px;
    position: relative;
}
.title_line_info .title{
    position: absolute;
    left: 8px;
    top: 11px;
    min-width: 31px;
    line-height: 21px;
    color: gray;
    overflow: hidden
}
/**好评内容位置**/
.comment_content{
    position: absolute;
    right: 27px;
    top: 11px;
    line-height: 21px;
}
.arrow {
  width:14px;
  height:14px;
  position:absolute;
  right:10px;
  top:15px;
}

.group_flow{
  padding:10px 20px 15px;
  display: flex;
  justify-content: space-around;
}
.group_flow>view{
  max-width:17%;
  font-size:12px;
}
.group_flow>view image{width:50px;height:50px}
.group_arrow{width: 14px;height: 14px;position:relative;top:30px;}
.detail{padding: 10px;overflow: hidden}
.detail>view:first-child{
  float: left;
  width:27vw;
  height:19vw;
}
.detail>view:last-child{
  float: left;
}
.detail>text{
  text-align: center;
  display:block;
  width:100%;
  clear:both;
}
.team_people{
  padding: 20px 10px;
  text-align: center;
  white-space: nowrap;
}
.headImage{
  width:100rpx;
  height:100rpx;
  border:2px solid #ff8f8f;
  border-radius:50rpx;
  margin-left:15px;
  position:relative;
  overflow: inherit;
}
.leader::before{
  content:"团长";
  display:block;
  position:absolute;
  width:36px;
  height:18px;
  background:red;
  border-radius:3px;
  bottom:-4px;
  color:#fff;
  left:7px;
}