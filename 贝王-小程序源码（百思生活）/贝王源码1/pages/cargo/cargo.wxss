page{
  display: block;
  min-height: 100%;
  background: #f8f8f8;
  font-size: 15px;
}
.cargo-nav{
  display: flex;
  background: #fff;
}
.cargo-nav-l{
  width: 50%;
  text-align: center;
  border-right: 1px solid #ff6316;
  padding: 20rpx 0rpx;
}
.cargo-nav-r{
  width: 50%;
  text-align: center;
  padding: 20rpx 0rpx;
}
.cargo-main{
  padding: 0rpx 20rpx;
}
.cargo-record{
  padding: 0rpx 20rpx;
}
.cargo-list{
  margin-top: 20rpx;
  display: flex;
  background: #fff;
  padding: 20rpx;
}
.cargo-list-l{
  width: 30%;
}
.goods-img{
  width: 100%;
  height:240rpx;
}
.cargo-list-r{
  width: 70%;
  line-height: 60rpx;
  padding-left: 10rpx;
}
.selected{
  color: #ff6316;
  border-bottom: 2px solid #ff6316;
  padding-bottom: 15rpx;
}
.cargo-num{
  color: #fff;
  background: #ff6316;
  padding: 0px 10rpx;
}
.sendnum{
  color: #bbb;
}