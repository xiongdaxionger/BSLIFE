@import "../../views/network/bad_network.wxss";


/*顶部图片*/
.top_image{
  overflow: hidden;
  display: inline-block;
  width: 100%;
  height: 200px;
}
/*输入容器*/
.input_container{
  background-color: white;
  border-radius: 3px;
  border: 1px #e5e5e5 solid;
  margin: 15px 5px 0px 5px;
}
/*输入列背景*/
.input_section{
  height: 45px;
  border-bottom: 1px #e5e5e5 solid;
  position: relative;
}
/*输入标题*/
.title{
  height: 21px;
  line-height: 21px;
  position: absolute;
  top: 12px;
  left: 8px;
  font-size: 16px;
}
/*输入框*/
input{
  font-size: 16px;
  height: 21px;
  width: 100%;
  text-overflow: clip;
  white-space: nowrap;
  overflow: hidden;
  border: 0px;
  position: absolute;
  top: 9px;
  left: 45px;
}
/*无效按钮*/
.disable_button{
  background-color: #DCDCDC;
  color: gray;
}
/*有效按钮*/
.normal_button{
  background-color: #f73030;
  color: white;
}
/*提交按钮*/
.submit_button{
  border-radius: 0.2rem;
  height: 1.8rem;
  line-height: 1.8rem;
  text-align: center;
  font-size: 0.8rem;
  margin-top: 20px;
  margin-left: 5%;
  width: 90%;
}