/* 会员邀请方式列表 */

.item{
    width: 100vw;
    background: white;
    height: 150px;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    border-bottom: 1px #f7f7f7 solid;
}

.icon{
    width: 80px;
    height: 80px;
    margin: 0 20px 0 20px;
    flex: 0 0 auto;
}

.right-cotainer{
    display: flex;
    flex-flow: column nowrap;
    justify-content: space-around;
    margin-right: 20px;
    height: 80px;
}

.title{
    font-size: 16px;
}

.desc{
    font-size: 14px;
    margin-top: 10px;
}