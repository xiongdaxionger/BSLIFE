/* pages/integral/integral_sign_in.wxss */
@import "/views/network/bad_network.wxss";

/*滚动视图*/
.scroll-view{
    height: 100vh;
    background: #f7f7f7;
}

/*头部*/
.header{
    background: #f73030;
    position: relative;
    height: 70px;
    color: white;
    width: 100%;
}

/*头部信息容器*/
.info-container{
  width: 100%;
  height: 100%;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
}

/*日历图标*/
.header image{
    width: 42px;
    height: 42px;
    margin-left: 15px;
}

/*已连续签到*/
.continuous-sigin-day{
    font-size: 17px;
    margin: 0 5px 0 5px;
    flex: 1 1 auto;
}

/*连续签到xx送xx*/
.near-signin-day{
    text-align: right;
    font-size: 13px;
    margin-right: 15px;
}

/*连续签到数字*/
.near-signin-day text{
    color: #FFF100;
}

/*积分规则容器*/
.rule-container{
    display: flex;
    flex-flow: row wrap;
    justify-content: space-between;
    color: #f73030;
    background: white;
    position: relative;
    padding-bottom: 10px;
}

/*积分规则标题*/
.rule-title{
    margin-top: 25px;
    font-size: 17px;
    margin-left: 20px;
    width: calc(60vw - 20px);
}

/*积分规则内容*/
.rule-content{
    font-size: 11px;
}

/*我的积分*/
.my-integral{
    font-size: 15px;
    position: absolute;
    left: 50vw;
    top: 100px;
}

/*钱*/
.money{
    margin-top: 15px;
    width: 40vw;
    height: 50px;
    float: right;
}

/*钱包*/
.wallet{
    width: 50vw;
    height: 73px;
    float: left;
}

/*猪*/
.pig{
    margin-left: 20vw;
    width: 30vw;
    height: 74px;
    float: right;
}

/*商品头部*/
.good-header{
    color: #f73030;
    height: 50px;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: center;
}

/*线条*/
.good-header-line{
    background:#e5e5e5;
    height: 1px;
    flex: 1 1 auto;
    margin: 0 15px 0 15px;
    width: calc(100vw - 230px);
}

/*new*/
.good-header-new{
    font-size: 10px;
    width: 30px;
    line-height: 30px;
    border-radius: 15px;
    border: 2px #f73030 solid;
    text-align: center;
    flex: 0 0 auto;
}

/*商品头部标题*/
.good-header-title{
    margin-left: 10px;
    font-size: 15px;
    flex: 0 0 auto;
}

/*商品容器*/
.good-container{
    display: flex;
    flex-flow: row wrap;
}

/*商品*/
.good-item{
    display: flex;
    flex-flow: column wrap;
    margin-left: 10rpx;
    bottom: 10rpx;
    background: white;
    width: 360rpx;
}
/*商品图片*/
.good-item image{
    width: 360rpx;
    height: 360rpx;
}

/*商品名称*/
.good-name{
    font-size: 14px;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    margin:5px 5px 0 5px;
}
/*积分*/
.good-integral{
    display: flex;
    flex-flow: row nowrap;
    font-size: 15px;
    margin: 5px;
    color: #f73030;
    align-items: flex-end;
}

/*商品积分名称*/
.good-integral-name{
    font-size: 10px;
}