@import "/views/network/bad_network.wxss";
@import "/pages/goods/good_search.wxss";

.scroll-view-container{
    height: 100vh;
}

/*搜索头部*/
.search-header{
    height: 40px;
    position: fixed;
    z-index: 99;
}

/*搜索栏背景*/
.search-background{
    background: white;
    height: 40px;
    width: 100%;
    position: fixed;
}

/*搜索内容*/
.search-content{
    height: 40px;
    width: 100vw;
    display: flex;
    flex-flow: row nowrap;   
    align-items: center;
    position: fixed;
}

/*搜索容器*/
.search-container{
    margin: 0 0 0 10px;
    border-radius: 3px;
    height: 30px;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    flex: 1 1 auto;
}

/*搜索图标*/
.search-icon{
    width: 15px;
    height: 15px;
    margin: 0 8px 0 8px;
}

/*搜索文字*/
.search-text{
    font-size: 14px;
    flex: 1 1 auto;
}

/*拨打电话图标*/
.phone-icon{
    width: 20px;
    height: 20px;
    padding: 10px;
}

/*轮播广告*/
.banner{
    width: 100%;
}

.banner image{
    width: 100%;
    height:100%;
}

/*导航图标*/
.navigation{
    width: 100%;
}

.navigation ul{
    display: flex;
    flex-flow: row wrap;
    align-items: center;
    justify-content: center;
}
.navigation li{
    width: 25%;
    display: flex;
    flex-flow: column wrap;
    align-items: center;
    justify-content: center;
    margin: 10px 0 10px 0;
}

.navigation image{
    width: 45px;
    height: 45px;
    margin-bottom: 8px;
}
.navigation text{
    font-size: 13px;
}
/*快报文章*/
.article{
    background: white;
    border-radius: 5px;
    margin: 0 20px 10px 20px;
    display: flex;
    flex-flow: row;
    align-items: center;
}

.article image{
    margin: 0 10px 0 5px;
    width: 80rpx;
    height: 38rpx;
}

.article scroll-view{
    height: 35px;
    width: 590rpx;
    overflow: hidden;
}

.article view{
    font-size: 14px;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    margin-right: 10px;
    line-height: 35px;
    width: 590rpx;
}

/*图片广告*/
.image-ad{
    display: flex;
    flex-flow: row wrap;
    justify-content: space-between;
    padding: 0;
}

/*标题*/
.image-ad-title{
    width: 100%;
    height: 40px;
    display: flex;
    flex-flow: row;
    align-items: center;
}

.image-ad-title text{
    font-size: 18px;
    margin: 0 10px 0 10px;
}

/*标题左右的线条*/
.image-ad-title-line{
    width: 90px;
    height: 2px;
}

/*分割线*/
.image-ad-line{
    width: 100%;
    height: 1px;
    margin: 0 10px 0 10px;
    background: #f7f7f7;
}

/*商品列表*/
.goods-list{
    width: 100%;
    display: flex;
    flex-flow: row wrap;
    background: #f7f7f7;
}

/*商品列表item*/
.good-list-item{
    display: flex;
    width: 359rpx;
    flex-flow: column wrap;
    border-left:10rpx #f7f7f7 solid;
    border-top:10rpx #f7f7f7 solid;
    background: white;
}

/*商品图片*/
.good-list-item image{
    width: 359rpx;
    height: 359rpx;
    margin-bottom: 10px;
}

/*商品名称*/
.goods-list-name{
    font-size: 14px;
    line-height: 20px;
    height: 40px;
    color: black;
    overflow: hidden;
    text-overflow: ellipsis;
    margin: 0 0 5px 5px;
}

/*商品价格*/
.goods-list-price{
    font-size: 14px;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    margin: 0 5px 5px 5px;
}

/*秒杀*/
.good-secondKill{
    background: white;
    margin-bottom: 10px;
    height: 365rpx;
    width: 100%;
}

/*秒杀倒计时*/
.good-secondKill-timer{
    display: flex;
    flex-flow: row;
    align-items: center;
    font-size: 14px;
}

/*秒杀倒计时*/
.good-secondKill-timer view{
    min-width: 18px;
    height: 18px;
    text-align: center;
    line-height: 18px;
    margin: 0 3px 0 3px;
    border: 1.5px lightgray solid;
    border-radius: 3px;
}

/*活动已结束了*/
.good-secondKill-end{
    font-size:14px;
    color: lightgray;
}

/*秒杀头部*/
.good-secondKill-header{
    width: 100%;
    height: 80rpx;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    position: relative;
}

/*秒杀右边标题*/
.good-secondKill-text{
    font-size: 13px;
    text-align: right;
    max-width: 300rpx;
    position: absolute;
    right: 30px;
    line-height: 80rpx;
}

/*秒杀左边图片*/
.good-secondKill-icon{
    width: 220rpx;
    height: 50rpx;
    margin-left: 10rpx;
}

/*秒杀箭头*/
.good-secondKill-arrow{
    width: 10px;
    height: 10px;
}

/*秒杀箭头背景*/
.good-secondKill-arrow-bg{
    position: absolute;
    top: 0;
    bottom: 0;
    margin: auto;
    right: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f73030;
    border-radius: 3px;
    width: 15px;
    height: 15px;
}

/*滚动栏*/
.good-secondKill-goods{
    width: 750rpx;
    height: 255rpx;
}

.good-secondKill-goods-view{
    display: flex;
    flex-flow: row nowrap;
}

/*秒杀商品*/
.good-secondKill-item{
    width: 205rpx;
    flex: 0 0 auto;
    display: flex;
    flex-flow: column wrap;
    justify-content: center;
    align-items: center;
    margin-left: 15rpx;
}

/*秒杀商品图片*/
.good-secondKill-item image{
    width: 205rpx;
    height: 205rpx;
    margin-bottom: 10rpx;
}

/*秒杀商品价格*/
.good-secondKill-price{
    font-size: 16px;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    text-align: center;
    width: 205rpx;
}