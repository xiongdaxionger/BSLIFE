@import "../../views/network/bad_network.wxss";

/**添加咨询栏**/
.advice_add_view{
    background-color: white;
    font-size: 15px;
    width: 100%;
    min-height: 44px;
    max-height: 44px;
    border-top: 1px #F7F7F7 solid;
    border-bottom: 1px #F7F7F7 solid;
    position: fixed;
    top: 0px;
    left: 0px;
    z-index: 999
}
/**添加按钮**/
.add_action_button{
    position: absolute;
    width: 100px;
    height: 30px;
    max-height: 30px;
    text-align: right;
    top: 7px;
    right: 8px;
    padding-top: 4px;
    color: #969696
}

/**类型选择栏**/
.type_bar{
    height: 44px;
    line-height: 44px;
    width: 100vw;
    display: flex;
    flex-direction: row;
}
/**类型选择栏选项**/
.type_item{
    font-size: 15px;
    text-align: center;
    position: relative;
    min-width: 95px;
}
/**类型视图**/
.type_scroll_view{
    height: 44px;
    width: 100vw;
    background-color: white;
    position: fixed;
    top: 44px;
    left: 0px;
    z-index: 998;
}
/**选项栏的右侧横线**/
.right_line{
    width: 1px;
    background-color: #F5F5F5;
    position: absolute;
    right: 0px;
    top:12px;
    min-height: 20px;
}
/**选择栏文本**/
.text{
    color: #000000;
}
/**选择项选中**/
.text.select{
    color: #FF0022;
    border-bottom: 2px #f73030 solid;
    padding-bottom: 9px;
}

/*空视图容器*/
.empty-container{
    width: 100%;
    display: flex;
    flex-flow: column nowrap;
    align-items: center;
    justify-content: center;
    background-color: #F7F7F7;
    height: 100vh;
    margin-top: 0px
}

/*空视图图标*/
.empty-container-icon{
    width: 70px;
    height: 70px;
    background: darkgrey;
    border-radius: 35px;
}

/*空视图标题*/
.empty-container-title{
    font-size: 20px;
    font-weight: bold;
    margin: 10px 0 10px 0;
}

/*空视图副标题*/
.empty-container-subtitle{
    font-size: 16px;
    color: lightgray;
}

/**咨询列表**/
.advice_list{
    background-color: #F5F5F5;
    height: calc(100vh - 44px - 44px);
    margin-top: 88px;
}

/**咨询视图容器**/
.advice_list_view{
    background-color: #FFFFFF;
    padding:0px 8px;
    margin-top: 15px;
    font-size: 15px;
}

/**咨询发布者视图**/
.advice_name_view{
    background-color: white;
    position: relative;
    color: black;
    height: 35px;
    line-height: 35px;
}
/**名称**/
.author_name{
    position: absolute;
    height: 21px;
    line-height: 21px;
    left: 0px;
    top: 7px;
    width: 50%
}
/**时间**/
.time{
    position: absolute;
    top: 7px;
    right: 0px;
    width: 50%;
    height: 21px;
    line-height: 21px;
    text-align: right
}
/**问题或者回复者姓名视图**/
.advice_content_view{
    position: relative;
    background-color: white;
    font-size: 15px;
    min-height: 38px;
}
/**类型标志**/
.type_view{
    position: absolute;
    color: white;
    width: 21px;
    min-height: 21px;
    max-height: 21px;
    text-align: center;
    border-radius: 3px;
    top: 8px;
    left: 0px;
}
/**提问内容或者回复者姓名**/
.content_text{
    color: black;
    margin-left: 30px;
    padding-top: 4px;
    padding-bottom: 4px;
    margin-right: 46px;
    min-height: 30px;
    display: flex;
    align-items: center;
    word-wrap:break-word;
    word-break:break-all;
}
/**回复图片--提问类型才有**/
.reply_button{
    position: absolute;
    top: 8px;
    right: 0px;
    width: 30px;
    height: 22px;
}
/**回复咨询的内容**/
.reply_content{
    margin-left: 30px;
    margin-right: 8px;
    background-color: white;
    color: gray;
    font-size: 15px;
    line-height: 21px;
    display: flex;
    align-items: center;
    word-wrap:break-word;
    word-break:break-all;
}
/**查看更多/点击收起**/
.show_more_view{
    background-color: white;
    text-align: center;
    font-size: 15px;
    height: 35px;
}