/* 添加商品评价 */

@import "/views/network/bad_network.wxss";

/*评分星星*/
.star-container{
    display: flex;
    flex-flow: row nowrap;
}
/*星星图片*/
.star-container image{
    width: 15px;
    height: 15px;
}

/*总评*/
.overall{
    width: 100vw;
    background: white;
    border-bottom: 1px #f7f7f7 solid;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
}

.good-image{
    margin: 15px;
    width: 70px;
    height: 70px;
    border: 1px #f7f7f7 solid;
}

.overall text{
    font-size: 15px;
    margin-right: 15px;
}

/*评价内容输入*/
.content-input-container{
    background: white;
    width: 100vm;
}

.content-input-container-textarea{
    padding: 5px;
    height: 70px;
    font-size: 15px;
    width: calc(100vw - 30px);
}

/*晒图*/
.img-container{
    display: flex;
    flex-flow: row wrap;
    width: 100vw;
    padding-top: 15px;
}

.img{
    width: calc((100vw - 15px * 5) / 4);
    height: calc((100vw - 15px * 5) / 4);
    margin: 0 0 15px 15px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}


.comment-img{
    width: 100%;
    height: 100%;
}

.delete-img{
    width: 20px;
    height: 20px;
    position: absolute;
    top: -10px;
    right: -10px;
}

/*正在上传图片*/
.img-loading{
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    width: 20px;
    height: 20px;
    position: absolute;
}

/*上传失败*/
.upload-fail{
    color: white;
    background: rgba(0, 0, 0, 0.5);
    font-size: 13px;
    display: flex;
    justify-content: center;
    align-items: center;
}

.comment-add-img{
    width: 48px;
    height: 40px;
}

/*其他评价*/
.other-container{
    background: white;
    width: 100vw;
    display: flex;
    flex-flow: row wrap;
    margin: 0 0 10px 0;
    padding: 10px 0 10px 0;
}

.other-item{
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    height: 40px;
    margin: 0 15px 0 15px;
    width: 100vw;
}

.other-item text{
    font-size: 15px;
    color: #666666;
    margin-right: 20px;
}

/*匿名*/
.anony-container{
    height: 80px;
    display: flex;
    flex-flow: column nowrap;
    align-items: center;
}

.anony-container-text{
    color: gray;
    font-size: 16px;
    margin-right: 5px;
    margin-left: 15px;
}

/*提交按钮*/
.submit-btn{
    font-size: 16px;
    color: white;
    background: #f73030;
    border-radius: 3px;
    line-height: 40px;
    text-align: center;
    position: absolute;
    bottom: 10px;
    left: 10px;
    width: calc(100vw - 20px);
}


