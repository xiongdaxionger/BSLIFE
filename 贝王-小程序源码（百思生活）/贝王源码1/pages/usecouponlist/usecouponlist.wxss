@import "../../views/network/bad_network.wxss";

/**使用优惠券背景**/
.use_coupon_list_container{
    background-color: #F7F7F7;
    height: 100vh;
}
/**添加优惠券**/
.add_coupon_view{
    width: 100%;
    min-height: 50px;
    background-color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    color: gray;
    font-size: 16px;
    position: fixed;
    top: 44px;
    left: 0px;
}
/**优惠券列表**/
.coupon_list_scroll_view{
    height: calc(100vh - 44px - 50px - 50px);
    width: calc(100vw - 16px);
    background-color: #F7F7F7;
    top: 94px;
    left: 0px;
    position: absolute;
    padding-left: 8px
}
/**领券视图**/
.get_coupon_view{
    position: fixed;
    left: 0px;
    bottom: 0px;
    background-color: #F7F7F7;
    width: 100%;
    font-size: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 50px;
}
/**领券按钮**/
.get_button{
    background-color: white;
    min-height: 44px;
    width: calc(100vw - 30px);
    color: gray;
    border-radius: 3.0px;
    display: flex;
    align-items: center;
    justify-content: center
}
/**空视图演示调整**/
.empty_view_color{
    background-color: #F7F7F7;
    height: calc(100vh - 50px - 50px - 44px)
}
/*空视图容器*/
.empty-container{
    width: 100%;
    height: calc(100vh - 82px);
    display: flex;
    flex-flow: column nowrap;
    align-items: center;
    justify-content: center;
}

/*空视图标题*/
.empty-container-title{
    font-size: 20px;
    font-weight: bold;
    margin: 10px 0 10px 0;
}

/*空视图副标题*/
.empty-container-subtitle{
    font-size: 16px;
    color: lightgray;
}

/**订单状态选择栏**/
.order_status_bar{
    height: 44px;
    line-height: 44px;
    background-color: white;
    display: flex;
    flex-direction: row;
    position: fixed;
    top: 0px;
    left: 0px;
    width: 100%;
    z-index: 10;
    border-top: 1px #f7f7f7 solid;
}
/**订单状态选择栏选项**/
.order_status_item{
    font-size: 15px;
    text-align: center;
    width: 20%;
    position: relative;
}
/**选项栏的右侧横线**/
.right_line{
    width: 1px;
    background-color: #F5F5F5;
    position: absolute;
    right: 0px;
    top:12px;
    min-height: 20px;
}
/**选择栏文本**/
.text{
    color: #000000;
}
/**宽度**/
.order_status_item.half_width{
    width: 50%
}
/**选择项选中**/
.text.select{
    color: #FF0022;
    border-bottom-width: 2px;
    border-bottom-color: #f73030;
    border-bottom-style: solid;
    padding-bottom: 9px;
}
/**配送方式容器**/
.shipping-container{
    width: 100vw;
    height: 100vh;
    position: fixed;
    z-index: 999;
    top: 0px;
    left: 0px;
    font-size: 15px;
}
/**背景**/
.shipping_black_transparent_bg{
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.4);
    position: absolute;
    top: 0px;
    left: 0px;
    right: 0px;
    bottom: 0px;
    opacity: 0;
}
/**支付密码容器视图**/
.pay_password_container{
    background-color: white;
    width: 250px;
    min-height: 160px;
    max-height: 160px;
    display: flex;
    flex-flow: row wrap;
    margin-left: calc(50vw - 125px);
    border-radius: 5.0px;
    position: relative
}
/**支付密码头部**/
.header{
    width: 100%;
    max-height: 40px;
    min-height: 40px;
    position: relative;
    border-bottom: 1px #F7F7F7 solid;
    box-sizing: border-box;
}
/**头部标题**/
.title{
    position: absolute;
    width: 150px;
    top: 5px;
    left: 50px;
    font-size: 15px;
    min-height: 30px;
    display: flex;
    align-items: center;
    justify-content: center
}
/**关闭按钮**/
.close{
    width: 30px;
    position: absolute;
    top: 8px;
    right: 5px;
}
/**密码容器**/
.pay_password_input_container{
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    min-height: 40px;
    max-height: 40px;
    width: 240px;
    margin-left: 5px;
    text-align: center;
    border: 1px solid #F7F7F7;
}
/**密码输入框**/
.input{
    width: 100%;
    min-height: 38px;
    max-height: 38px;
    color: black;
    font-size: 17px
}
/**取消/确定按钮**/
.action_button{
    height: 45px;
    width: 50%;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 17px;
}