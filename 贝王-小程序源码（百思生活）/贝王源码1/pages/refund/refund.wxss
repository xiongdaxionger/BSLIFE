@import "../../views/network/bad_network.wxss";
@import "../orderlist/orderlist.wxss";

/**显示理由或者店家反馈**/
.line_info{
    color:gray;
    line-height:25px;
    font-size:15px
}
/**状态文本**/
.status_text{
    position: absolute;
    top: 8px;
    right: 8px;
    color: #F73030;
    line-height: 21px;
}
/**配送方式容器**/
.shipping-container{
    width: 100vw;
    height: 100vh;
    position: fixed;
    z-index: 999;
    top: 0px;
    left: 0px;
    font-size: 15px;
}
/**背景**/
.shipping_black_transparent_bg{
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.4);
    position: absolute;
    top: 0px;
    left: 0px;
    right: 0px;
    bottom: 0px;
    opacity: 0;
}
/**支付密码容器视图**/
.pay_password_container{
    background-color: white;
    width: calc(100vw - 60px);
    display: flex;
    flex-flow: row wrap;
    margin-left: 30px;
    border-radius: 5.0px;
    position: relative
}
/**支付密码头部**/
.header{
    width: 100%;
    max-height: 55px;
    min-height: 55px;
    position: relative;
    border-bottom: 1px #F7F7F7 solid;
    box-sizing: border-box;
}
/**头部标题**/
.title{
    position: absolute;
    color: #F73030;
    width: 100%;
    height: 100%;
    top: 0px;
    font-size: 18px;
    display: flex;
    align-items: center;
    justify-content: center
}
/**密码容器**/
.pay_password_input_container{
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    min-height: 40px;
    max-height: 40px;
    width: calc(100% - 30px);
    margin-left: 15px;
    border: 1px solid #F7F7F7;
    position: relative;
}
/**密码输入框**/
.input{
    width: calc(100% - 38px);
    min-height: 38px;
    max-height: 38px;
    color: black;
    font-size: 17px;
    padding-left: 8px;
}
/**图片**/
.image{
    width: 26px;
    min-height: 26px;
    max-height: 26px;
    position: absolute;
    right: 3px;
    top: 7px;
}
/**取消/确认按钮**/
.cancel_confirm_view{
    height: 150px;
    width: 100%;
    position: relative;
    background-color: white;
    font-size: 16px;
    border-bottom-left-radius: 5.0px;
    border-bottom-right-radius: 5.0px;
}
/**取消按钮**/
.cancel_view{
    height: 49px;
    width: 50%;
    position: absolute;
    left: 0px;
    bottom: 0px;
    border-top: 1px solid #F7F7F7;
    color: lightgray;
    text-align: center;
    line-height: 49px;
    border-bottom-left-radius: 5.0px;
    background-color: white
}
/**确认按钮**/
.confirm_view{
    height: 49px;
    width: 50%;
    position: absolute;
    right: 0px;
    bottom: 0px;
    color: white;
    background-color: #F73030;
    border-bottom-right-radius: 5.0px;
    text-align: center;
    line-height: 49px;
}
/**空白**/
.bland{
    background-color: white;
    height: 10px;
    width: 100%;
}
/**配送方式容器视图**/
.shipping_method_container{
    height: calc(100vh - 120px);
    width: 100vw;
    top: 100vh;
    position: absolute;
}
/**配送方式显示**/
.shipping_method_scroll_view{
    position: absolute;
    height: calc(100vh - 350px);
    width: 100%;
    top: 44px;
    background-color: #F7F7F7
}
/**配送方式头部**/
.shipping_method_header{
    min-height: 44px;
    position: relative;
    color: black;
    border-bottom: 1px solid #F7F7F7;
    background-color: white;
    box-sizing: border-box;
}
/**标题**/
.header_title{
    position: absolute;
    width: 100px;
    line-height: 24px;
    text-align: center;
    top: 10px;
    left: calc(50vw - 50px)
}
/**取消**/
.cancel_title{
    color: lightgray;
    width: 35px;
    position: absolute;
    top: 10px;
    left: calc(100vw - 40px);
}
/**配送方式**/
.shipping_name_view{
    padding-left: 10px;
    background-color: white;
    color: black;
    width: 100%;
    min-height: 44px;
    max-height: 44px;
    border-bottom: 1px #F7F7F7 solid;
    box-sizing: border-box;
    display: flex;
    align-items: center;
}