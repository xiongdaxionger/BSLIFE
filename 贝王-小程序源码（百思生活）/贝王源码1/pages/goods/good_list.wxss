/*商品列表*/

@import "/views/network/bad_network.wxss";
@import "/pages/goods/good_search.wxss";

/*搜索头部*/
.search-header{
    background: white;
    height: 40px;
    display: flex;
    flex-flow: row nowrap;   
    align-items: center;
    position: fixed;
    width:100%;
}

/*搜索容器*/
.search-container{
    background: #f7f7f7;
    border-radius: 3px;
    height: 30px;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    flex: 1 1 auto;
    margin-left: 10px;
}

/*搜索图标*/
.search-icon{
    width: 15px;
    height: 15px;
    margin: 8px 8px;
}

/*搜索文字*/
.search-text{
    color: #e1dddc;
    font-size: 14px;
    flex: 1 1 auto;
}

/*搜索输入框*/
.search-input{
    font-size: 14px;
    flex: 1 1 auto;
}

/*列表样式图标*/
.list-style-icon{
    width: 30px;
    height: 30px;
    padding: 10px;
}

/**菜单条**/
.bar{
    height: 40px;
    line-height: 40px;
    background: white;
    display: flex;
    flex-direction: row;
    width: 100%;
    border-bottom: 1px #f7f7f7 solid;
    position: fixed;
    top: 40px;
    border-top: 1px #f7f7f7 solid;
}
/**状态选择栏选项**/
.bar-item{
    font-size: 15px;
    position: relative;
    display: flex;
    flex-flow: row nowrap;
    justify-content: center;
    align-items: center;
    flex: 1 1 auto;
}
/**选项栏的右侧横线**/
.bar-item-right-line{
   width: 1px;
    background: #F5F5F5;
    position: absolute;
    right: 0px;
    top:0;
    bottom: 0;
    margin: auto;
    height: 15px;
}
/**文本**/
.bar-item text{
    font-size: 14px;
}

/*菜单栏图标*/
.bar-item image{
    width: 10px;
    height: 15px;
    margin-left: 5px;
}

/*回到顶部按钮*/
.scroll_to_top_btn{
  border-bottom-right-radius: 5px;
  border-bottom-left-radius: 5px;
  background-color:rgba(0,0,0,0.5);
  width: 40px;  
  height: 40px;
  position: fixed; 
  z-index: 3; 
  bottom: 15px; 
  right: 15px;
}

/*底部购物车按钮*/
.bottom_shopcart_btn{
  border-top-right-radius: 5px;
  border-top-left-radius: 5px;
  background-color:rgba(0,0,0,0.5);
  width: 40px;  
  height: 40px;
  position: fixed; 
  z-index: 3; 
  bottom: 56px; 
  right: 15px;
}

/*购物车数量*/
.badge-value{
    background: #f73030;
    color: white;
    min-width: 18px;
    height: 18px;
    line-height: 18px;
    font-size: 13px;
    border-radius: 9px;
    text-align: center;
    position: absolute;
    right: 3px;
    top: 3px;
    margin: auto;
}

/*品牌容器*/
.good-container{
    width: 100%;
    margin-top: 82px;
    position: fixed;
}

/*商品列表滚动视图*/
.scroll-view{
    width: 100vw;
    height: calc(100vh - 82px);
}

/*列表容器*/
.good-list-container{
    display: flex;
    width: 100vw;
    flex-flow: row wrap;
    justify-content: flex-start;
}

/*商品列表 row item*/
.good-list-item{
    margin: 0 10px 10px 10px;
    border: 1px #e5e5e5 solid;
    display: flex;
    flex-flow: row nowrap;
    background: white;
}

/*左边容器*/
.good-list-left-container{
    margin: 10px 10px 10px 10px;
    height: 125px;
    width: 125px;
    position: relative;
    flex-shrink: 0;
}

/*商品图片*/
.good-image{
    width: 125px;
    height: 125px;
    border: 1px #f7f7f7 solid;
}

/*售罄图标*/
.sold-out-image{
    width: 80px;
    height: 80px;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
}

/*图片标签容器*/
.image-tag-container{
    display: flex;
    flex-flow: row nowrap;
    overflow: hidden;
}

/*图片标签 图片*/
.image-tag-container image{
    width: 30px;
    height: 30px;
    position: absolute;
}

/*图片标签 文字*/
.image-tag-container view{
    width: 30px;
    height: 30px;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: center;
    text-align: center;
    position: absolute;
}

.image-tag-container text{
    overflow: hidden;
    font-size: 9px;
    padding: 3px;
}

/*右边容器*/
.good-list-right-container{
    margin: 10px 10px 10px 0px;
    display: flex;
    flex-flow: column wrap;
    position: relative;
    width: calc(100vw - 175px);
}

/*商品名称*/
.good-name{
    width: 100%;
    word-spacing: 1px;
    line-height: 18px;
    max-height: 36px;
    font-size: 15px;
    overflow: hidden;
}

/*列表价格容器*/
.good-price-container{
    width: 100%;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    margin: 10px 0 10px 0;
}

/*价格*/
.good-price{
    font-size: 17px;
    color: #E54646;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    flex-shrink: 0;
}

/*市场价格*/
.good-market-price{
    margin-left: 5px;
    font-size: 12px;
    color: gray;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    text-decoration: line-through;
}

/*销量*/
.good-buy-count{
    font-size: 14px;
    color: gray;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

/*底部容器*/
.good-list-bottom-container{
    position: absolute;
    width: 100%;
    bottom: 0;
    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-end;
    align-items: flex-end;
}

/*促销标签容器*/
.promotion-tag-container{
    display: flex;
    flex-flow: row nowrap;
    overflow: hidden;
    align-items: center;
    flex: 1 1 auto;
}

.promotion-tag-container-text{
    color: white;
    background: #f73030;
    border-radius: 3px;
    font-size: 10px;
    padding: 3px;
}

/*购物车按钮*/
.shopcart-image{
    width: 32px;
    height: 26px;
}

/*评论数量*/
.good-comment-count{
    color: gray;
    font-size: 11px;
    margin-right: 5px;
}

/*网格样式商品*/
.good-grid-item{
    display: flex;
    flex-flow: row wrap;
    align-items: flex-start;
    background: white;
    width: 359rpx;
    margin: 0rpx 0rpx 10rpx 10rpx;
}

/*网格样式上面容器*/
.good-grid-top-container{
    width: 359rpx;
    height: 359rpx;
    position: relative;
}

/*网格样式图片*/
.good-grid-image{
    width: 359rpx;
    height: 359rpx;
}
/*网格样式价格*/
.good-grid-price{
    font-size: 17px;
    color: #E54646;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    flex: 1 1 auto;
}

/*网格样式商品图片*/
.good-grid-name{
    word-spacing: 1px;
    line-height: 15px;
    font-size: 14px;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    margin: 10px 5px 5px 5px;
}

/*网格价格容器*/
.good-grid-price-container{
    width: 100%;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: flex-end;
    margin: 0px 5px 10px 5px;
}

/*网格样式底部容器*/
.good-grid-bottom-container{
    width: 100%;
    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-end;
    align-items: flex-end;
    margin: 0px 5px 8px 5px;
}


/*排序下拉列表容器*/
.sort-list-container{
    background: rgba(0, 0, 0, 0.4);
    width: 100vw;
    height: calc(100vh - 82px);
    margin-top: 82px;
    position: fixed;
    z-index: 99;
    display: flex;
    flex-flow: column wrap;
}

/*排序下拉列表item*/
.sort-list-item{
    background: white;
    width: 100%;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    position: relative;
}

/*item文本*/
.sort-list-item-text{
    font-size: 15px;
    margin-left: 15px;
    flex: 1 1 auto;
}

/*勾*/
.sort-list-item-icon{
    margin-right: 15px;
}

/*分割线*/
.sort-list-item-line{
    height: 1px;
    margin-left: 15px;
    width: 100%;
    background: #f7f7f7;
    position: absolute;
    bottom: 0;
    left: 0;
}

/*筛选视图容器*/
.screening-container{
     width: 100vw;
    height: 100vh;
    position: fixed;
    z-index: 999;
}

/*筛选视图半透明背景*/
.screening-black-transparent-bg{
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.4);
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    opacity: 0;
}

/*筛选信息内容容器*/
.screening-content-container{
    margin-left: 100vw;
    width: calc(100vw - 80px);
    height: 100vh;
    position: absolute;
}

/*筛选信息内容滑动视图*/
.screening-scroll-view{
    width: 100%;
    height: calc(100vh - 45px);
    position: absolute;
    background-color: white;
}

/*筛选信息内容*/
.screening-content{
    width: 100%;
    display: flex;
    flex-flow: row wrap;
    position: relative;
    margin-bottom: 10px;
}

/*筛选加载中*/
.screening-loading{
    width: 30px;
    height: 30px;
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    margin: auto;
}

/*筛选信息头部*/
.screening-header{
    height: 40px;
    width: 100%;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: flex-end;
    border-bottom: 1px #f7f7f7 solid;
}

/*头部标题*/
.screening-header-text{
    margin: 0 10px 0 10px;
    font-size: 15px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    flex: 1 1 auto;
}

/*头部图标*/
.screening-header-arrow{
    width: 10px;
    height: 10px;
    margin-right: 10px;
}

/*筛选信息按钮*/
.screening-item{
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    padding: 8px;
    border-radius: 4px;
    font-size: 14px;
    margin: 8px 0 0 8px;
}

/*筛选底部工具条*/
.screening-bottom-container{
    width: 100%;
    background: white;
    position: absolute;
    left: 0;
    bottom: 0;
    height: 44px;
    border-top: 1px #f7f7f7 solid;
    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-end;
    align-items: center;
}

/*筛选商品数量*/
.screening-bottom-good-count{
    font-size: 14px;
    color: black;
    display: flex;
    justify-content: center;
    flex: 1 1 auto;
}

.screening-bottom-good-count-red{
    color: red;
    font-size: 16px;
    margin: 0 3px 0 3px;
}

/*重置*/
.screening-bottom-reset{
    font-size: 15px;
    color: black;
    background: #e5e5e5;
    line-height: 44px;
    width: 70px;
    text-align: center;
}

/*完成*/
.screening-bottom-done{
     font-size: 15px;
    color: white;
    background: #f73030;
    width: 70px;
    line-height: 44px;
    text-align: center;
}


/*空视图容器*/
.empty-container{
    width: 100%;
    height: calc(100vh - 82px);
    display: flex;
    flex-flow: column nowrap;
    align-items: center;
    justify-content: center;
}

/*空视图图标*/
.empty-container-icon{
    width: 70px;
    height: 70px;
    background: darkgrey;
    border-radius: 35px;
}

/*空视图标题*/
.empty-container-title{
    font-size: 20px;
    font-weight: bold;
    margin: 10px 0 10px 0;
}

/*空视图副标题*/
.empty-container-subtitle{
    font-size: 16px;
    color: lightgray;
}


