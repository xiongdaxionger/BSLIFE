@import "../orderdetail/orderdetail.wxss";
/*@import "../shopcart/shopcart.wxss";*/
@import "../../views/network/bad_network.wxss";
/*确认订单容器*/
.confirm_order_container{
    background-color: #F7F7F7;
    color: black;
    font-size: 15px;
    width: 100%;
    height: calc(100vh - 49px)
}
/*未选中的地址视图*/
.unselect_address_container{
    position: relative;
    overflow: hidden;
    min-height: 53px;
    max-height: 53px;
}
/**背景图**/
.background_image{
    max-height: 53px;
    min-height: 53px;
    width: 100%
}
/*未选中的地址视图提示信息*/
.tip_label{
    position: absolute;
    top: 15px;
    left: 8px;
    line-height: 21px;
}
/*箭头*/
.arrow{
    position: absolute;
    top: 20px;
    right: 10px;
    width: 10px;
    min-height: 10px;
}
/*基本选择信息视图*/
.select_info_container{
    min-height: 44px;
    max-height: 44px;
    border-top: 1px #F5F5F5 solid;
    border-bottom: 1px #F5F5F5 solid;
    position: relative;
    background-color: white
}
/*标题*/
.title{
    position: absolute;
    top: 10px;
    left: 8px;
    line-height: 24px;
    width: 80px;
}
/*右侧内容*/
.content{
    position: absolute;
    top: 10px;
    left: 96px;
    right: 28px;
    line-height: 24px;
    overflow: hidden;
    text-align: right;
}
/*标红*/
.content.red_content{
    color: #f73030;
}
/*箭头*/
.info_arrow{
    position: absolute;
    top: 16px;
    right: 8px;
    width: 12px;
    min-height: 12px;
    max-height: 12px;
}
/*备注填写*/
.memo_input{
    position: absolute;
    right: 8px;
    top: 7px;
    text-align: right;
    min-height: 30px;
    display: flex;
}
/**备注的样式**/
.memo_input_placeholder{
    display: flex;
    align-items: center;
}
/*积分视图*/
.point_container{
    position: relative;
    min-height: 55px;
    max-height: 55px;
    border-top: 1px solid #F5F5F5;
    border-bottom: 1px solid #F5F5F5;
    background-color: white
}
/*积分开关*/
.point_switch{
    position: absolute;
    top: 11px;
    right: 8px;
}
/*积分使用说明*/
.point_info{
    position: absolute;
    top: 14px;
    left: 8px;
    right: 70px;
    overflow: hidden;
    line-height: 26px;
}

/*空视图*/
.blandView{
    min-height: 10px;
    width: 100%;
    background-color: #F7F7F7;
}
/**底部视图**/
.confirm_order_bottom_view{
    width: 100%;
    min-height: 49px;
    max-height: 49px;
    box-sizing: border-box;
    border-top: 1px solid #f73030;
    display: flex;
    align-items: center;
    font-size: 17px;
    z-index: 999;
    padding-left: 10px;
}
/**提交订单**/
.commit_view{
    background-color: #f73030;
    color: white;
    width: 100px;
    min-height: 49px;
    line-height: 20px;
    position: absolute;
    right: 0px;
    display: flex;
    justify-content: center;
    align-items: center;
}
/**配送方式容器**/
.shipping-container{
    width: 100vw;
    height: 100vh;
    position: fixed;
    z-index: 999;
    top: 0px;
    left: 0px;
    font-size: 15px;
}
/**配送方式容器视图**/
.shipping_method_container{
    height: calc(100vh - 120px);
    width: 100vw;
    top: 100vh;
    position: absolute;
}
/**配送方式显示**/
.shipping_method_scroll_view{
    position: absolute;
    height: calc(100vh - 120px);
    width: 100%;
    top: 44px;
    background-color: #F7F7F7
}
/**配送方式头部**/
.shipping_method_header{
    min-height: 44px;
    position: relative;
    color: black;
    border-bottom: 1px solid #F7F7F7;
    background-color: white;
    box-sizing: border-box;
}
/**标题**/
.header_title{
    position: absolute;
    width: 100px;
    line-height: 24px;
    text-align: center;
    top: 10px;
    left: calc(50vw - 50px)
}
/**取消**/
.cancel_title{
    color: lightgray;
    width: 35px;
    position: absolute;
    top: 10px;
    left: calc(100vw - 40px);
}
/**配送方式**/
.shipping_name_view{
    padding-left: 10px;
    background-color: white;
    color: black;
    width: 100%;
    min-height: 44px;
    max-height: 44px;
    border-bottom: 1px #F7F7F7 solid;
    box-sizing: border-box;
    display: flex;
    align-items: center;
}
/**背景**/
.shipping_black_transparent_bg{
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.4);
    position: absolute;
    top: 0px;
    left: 0px;
    right: 0px;
    bottom: 0px;
    opacity: 0;
}
/**商品价格容器**/
.good_price_container{
    position: absolute;
    top: 73px;
    left: 116px;
    right: 101px;
    line-height: 20px;
    max-height: 20px;
    flex-flow: row nowrap;
}
/**商品销售价**/
.good_price{
    color: #f73030;
    overflow: hidden;
    text-overflow: ellipsis;
}
/**市场价**/
.good_market_price{
    color:#969696;
    font-size:13px;
}

/**开启代客下单**/
.open_select_member{
    width: 100vw;
    height: 44px;
    background-color: white;
    font-size: 15px;
    position: relative;
}
/**代客下单提示**/
.open_select_member_info{
    position: absolute;
    left: 8px;
    top: 11px;
    width: 200px;
}
/**开关**/
.open_select_member_switch{
    position: absolute;
    right: 8px;
    top: 6px;
}

/**会员信息显示视图**/
.member_info_view{
    width: 100vw;
    height: 53px;
    position: relative;
}
/**会员信息**/
.member_info{
    position: absolute;
    top: 15px;
    left: 8px;
    right: 25px;
}