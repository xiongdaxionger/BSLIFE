/**背景图图**/
.add_container_view{
    background-color: #F7F7F7;
    font-size: 15px;
    color:black;
    height: 100vh;
    width: 100vw;
}
/**空白**/
.bland{
    height: 10px;
    width: 100%;
    background-color: #F7F7F7
}

/**选项卡**/
.type_view{
    width: calc(50vw - 20px);
    height: 35px;
    line-height: 35px;
    text-align: center;
}
/**选中的选项**/
.type_view.select_view{
    background-color: #f73030;
    color: white;
}
/**未选中**/
.type_view.un_select_view{
    background-color: #F7F7F7;
    color: black;
    box-sizing: border-box;
    border-top: 1px solid #f73030;
    border-bottom: 1px solid #f73030;
    border-right: 1px solid #f73030
}
/**显示容器**/
.info_view{
    height: 44px;
    width: 100%;
    background-color: white;
    position: relative;
    border-bottom: 1px solid #F7F7F7;
}
/**标题**/
.title{
    position: absolute;
    height: 21px;
    width: 80px;
    left: 8px;
    top: 11px;
}
/**副标题显示信息**/
.sub_title{
    position: absolute;
    height: 35px;
    line-height: 35px;
    left: 95px;
    right: 8px;
    top: 4px;
}
/**箭头**/
.arrow{
    width: 14px;
    height: 14px;
    position: absolute;
    right: 8px;
    top: 15px;    
}
/**输入框**/
.input{
    position: absolute;
    height: 35px;
    left: 95px;
    right: 8px;
    top: 4px;
}
/**获取短信验证码**/
.get_code_button{
    border-radius: 3.0px;
    position: absolute;
    right: 5px;
    top: 7px;
    width: 80px;
    min-height: 30px;
    max-height: 30px;
    font-size: 14px;
    display: flex;
    align-items: center;
    justify-content: center
}
/**获取短信验证码普通样式**/
.get_code_button.can_get{
    color: white;
    background-color: #f73030
}   
/**获取短信验证码正在获取样式**/
.get_code_button.getting{
    background-color: lightgray;
    color: gray
}
/**提交按钮**/
.submit_button{
    background-color: #F73030;
    color: white;
    border-radius: 3.0;
    font-size: 17px;
    height: 40px;
    line-height: 40px;
    margin-left: 10px;
    margin-right: 10px;
}
/**配送方式容器**/
.shipping-container{
    width: 100vw;
    height: 100vh;
    position: fixed;
    z-index: 999;
    top: 0px;
    left: 0px;
    font-size: 15px;
}
/**背景**/
.shipping_black_transparent_bg{
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.4);
    position: absolute;
    top: 0px;
    left: 0px;
    right: 0px;
    bottom: 0px;
    opacity: 0;
}
/**配送方式容器视图**/
.shipping_method_container{
    height: calc(100vh - 120px);
    width: 100vw;
    top: 100vh;
    position: absolute;
}
/**配送方式显示**/
.shipping_method_scroll_view{
    position: absolute;
    height: calc(100vh - 350px);
    width: 100%;
    top: 44px;
    background-color: #F7F7F7
}
/**配送方式头部**/
.shipping_method_header{
    min-height: 44px;
    position: relative;
    color: black;
    border-bottom: 1px solid #F7F7F7;
    background-color: white;
    box-sizing: border-box;
}
/**标题**/
.header_title{
    position: absolute;
    width: 100px;
    line-height: 24px;
    text-align: center;
    top: 10px;
    left: calc(50vw - 50px)
}
/**取消**/
.cancel_title{
    color: lightgray;
    width: 35px;
    position: absolute;
    top: 10px;
    left: calc(100vw - 40px);
}
/**配送方式**/
.shipping_name_view{
    padding-left: 10px;
    background-color: white;
    color: black;
    width: 100%;
    min-height: 44px;
    max-height: 44px;
    border-bottom: 1px #F7F7F7 solid;
    box-sizing: border-box;
    display: flex;
    align-items: center;
}