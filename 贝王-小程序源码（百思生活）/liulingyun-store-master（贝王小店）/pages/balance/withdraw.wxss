@import "../../views/network/bad_network.wxss";

/**背景视图**/
.with_draw_container{
    height: 100vh;
    background-color: #F7F7F7;
    width: 100vw;
    font-size: 15px;
    color: black;
}
/**显示容器**/
.info_view{
    height: 44px;
    width: 100%;
    background-color: white;
    position: relative;
    border-bottom: 1px solid #F7F7F7;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
}
/**标题**/
.title{
    width: 80px;
    margin: 0 0 0 10px;
}
/**副标题显示信息**/
.sub_title{
    color: darkgrey;
}
/**输入框**/
.input{
    flex: 1 1 auto;
    margin: 0 10px 0 0;
}
/**添加账号**/
.add_account_button{
  margin: 0 0 0 10px;
}
/**账号显示**/
.account_info{
    margin: 0 30px 0 0;
    text-align: right;
    flex: 1 1 auto;
}
/**箭头**/
.arrow{
     right: 10px;
  position: absolute;
  top: 0;
  bottom: 0;
  margin: auto;
  width: 40rpx;
  height: 40rpx;
}
/**提交按钮**/
.submit_button{
    background-color: #F73030;
    color: white;
    border-radius: 3.0;
    font-size: 17px;
    height: 40px;
    line-height: 40px;
    margin: 10px 10px 0 10px;
}
/**说明信息**/
.message{
  margin: 10px 10px 0 10px;
    font-size: 13px;
    color: darkgray;
    line-height: 14px;
}
/**空白**/
.bland{
    background-color: #F7F7F7;
    height: 8px;
    width: 100%;
}
/**配送方式容器**/
.shipping-container{
    width: 100vw;
    height: 100vh;
    position: fixed;
    z-index: 999;
    top: 0px;
    left: 0px;
    font-size: 15px;
}
/**背景**/
.shipping_black_transparent_bg{
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.4);
    position: absolute;
    top: 0px;
    left: 0px;
    right: 0px;
    bottom: 0px;
    opacity: 0;
}
/**支付密码容器视图**/
.pay_password_container{
    background-color: white;
    width: 250px;
    min-height: 160px;
    max-height: 160px;
    display: flex;
    flex-flow: row wrap;
    margin-left: calc(50vw - 125px);
    border-radius: 5.0px;
    position: relative
}
/**支付密码头部**/
.header{
    width: 100%;
    max-height: 40px;
    min-height: 40px;
    position: relative;
    border-bottom: 1px #F7F7F7 solid;
    box-sizing: border-box;
}
/**头部标题**/
.header_title{
    position: absolute;
    width: 150px;
    top: 5px;
    left: 50px;
    font-size: 15px;
    min-height: 30px;
    display: flex;
    align-items: center;
    justify-content: center
}
/**关闭按钮**/
.close{
    width: 30px;
    position: absolute;
    top: 8px;
    right: 5px;
}
/**支付内容**/
.pay_content{
    width: 100%;
    min-height: 30px;
    max-height: 30px;
    font-size: 15px;
    padding: 0px 5px;
    line-height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
}
/**支付金额**/
.pay_money{
    width: 100%;
    min-height: 40px;
    max-height: 40px;
    font-size: 28px;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
}
/**密码容器**/
.pay_password_input_container{
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    min-height: 40px;
    max-height: 40px;
    width: 240px;
    margin-left: 5px;
    text-align: center;
    border: 1px solid #F7F7F7;
}
/**密码输入框**/
.pay_input{
    width: 100%;
    min-height: 38px;
    max-height: 38px;
    color: black;
    font-size: 17px
}