/* 余额首页 钱包 */

@import "/views/network/bad_network.wxss";

/*头部*/
.header{
    background: #f73030;
    color: white;
    width: calc(100vw - 30px);
    padding: 20px 15px 15px 15px;
    position: relative;
}

/*余额标题*/
.balance-title{
    font-size: 16px;
}

/*余额*/
.balance-amount{
    font-size: 35px;
    margin-top: 5px;
}

/*当前奖励*/
.commission{
    font-size: 16px;
    margin-top: 10px;
}

/*账单*/
.bill-container{
    display: flex;
    flex-flow: row nowrap;
    position: absolute;
    top: 20px;
    right: 10px;
    align-items: center;
}

.bill-container text{
    font-size: 16px;
}

.bill-container image{
    width: 15px;
    height: 15px;
}

/*列表信息*/
.list-container{
    display: flex;
    flex-flow: row wrap;
    background: #e5e5e5;
}

.list-item{
    width: calc(50vw - 15px);
}

.list-title-container{
    font-size: 15px;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    margin: 10px 0 2px 15px;
}

.list-title-container image{
    width: 15px;
    height: 15px;
    padding: 0 15px 0 5px;
}

.list-amount{
    margin: 0 0 8px 15px;
    font-size: 25px;
    color: #E54646;
}

/*按钮*/
.btn-container{
    font-size: 16px;
    display: flex;
    flex-flow: row nowrap;
    padding: 25px 15px 0 15px;
}

/*提现按钮*/
.withdraw-btn{
    background: #f73030;
    color: white;
    line-height: 40px;
    margin-right: 15px;
    border-radius: 3px;
    flex: 1 1 auto;
    text-align: center;
}

/*充值按钮*/
.topup-btn{
    background: #FFDF50;
    color: black;
    line-height: 40px;
    flex: 1 1 auto;
    border-radius: 3px;
    text-align: center;
}



