@import './list.wxss';
page{
  font-size: 14px;
  background: #f7f7f7;
}
.meber-bg{
  background-image: url('http://www.ibwang.cn/public/xcxfiles/016.jpg');
  background-size:100% 100%;
  height: 180px;
  width: 100%;
  font-size: 16px;
  text-align:center;
}
.head-portrait{
  width: 140rpx;
  height: 140rpx;
}
.header-center{
  padding-top: 100rpx;
}
.detail-nav{
  display: flex;
  border-bottom: 2px solid #f3f3f3;
  padding: 20rpx 0rpx;
  text-align: center;
  color: #888888;
  background: #fff;
}
.detail-nav-l{
  width: 33%;
}
.detail-nav-c{
  width: 33%;
  border-right: 1px solid #f3f3f3;
  border-left: 1px solid #f3f3f3;
}
.detail-nav-r{
  width: 33%;
}
.selected-nav{
  color: #494949;
  border-bottom: 1px solid #494949;
  padding: 20rpx 10rpx;
}
.detail-list{
  background: #fff;
  margin-top: 20rpx;
  border-top: 1px solid #f5f5f5;
  padding-left: 20rpx;
}
.detail-item{
  border-bottom: 1px solid #f5f5f5;
  padding: 20rpx 0rpx;
}
.gray-words{
  color: #919191;
}
.black-words{
  color: #515151;
}
.team-list{
  margin-top: 10rpx;
}
.team{
  background: #fff;
}
.no-data{
  text-align: center;
  margin-top: 80rpx;
}
.order-list{
  background: #fff;
  color: #ccc;
  padding: 20rpx 0rpx;
  border-bottom: 1px solid #ccc;
  border-top: 1px solid #ccc;
  margin-top: 10px;
}
.order-order-id{
  display: flex;
  justify-content: space-between;
  align-content: center;
  color: #333333;
  padding: 0rpx 20rpx 10rpx;
  border-bottom: 1px solid #f3f3f3;
}
.order-time{
  display: flex;
  justify-content: space-between;
  align-content: center;
  color: #333333;
  padding: 10rpx 20rpx 0rpx;
}
.order-goods{
  display: flex;
  margin-top: 10rpx;
  padding: 0rpx 20rpx;
  border-bottom: 1px solid #ccc;
}
.order-goods-l{
  width: 20%;
}
.order-goods-r{
  width: 80%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.goods-pic{
  width: 120rpx;
  height: 120rpx;
}
.black-words{
  color: #000;
}
.goods-price-colore{
  color: red;
}