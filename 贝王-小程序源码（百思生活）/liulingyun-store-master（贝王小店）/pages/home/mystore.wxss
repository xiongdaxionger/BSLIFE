  flex-wrap: wrap;
  justify-content: space-between;
  background: #f8f8f8;
}
.goods-item{
  width: 48%;
  background: #fff;
  margin-bottom:20rpx;
}
.goods-img{
  width: 100%;
  height: 180px;
}
.goods-name{
  padding: 10rpx 20rpx;
  height: 70rpx;
  overflow: hidden;
}
.add-cart{
  width: 40rpx;
  height: 40rpx;
}
.goods-price{
  display: flex;
  justify-content: space-between;
  color: #ee8386;
  padding: 10rpx 20rpx;
}